<Page x:Class="Chat.Pages.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chat.Pages"
      xmlns:viewModels="clr-namespace:Chat.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatPage">
    <Page.DataContext>
        <viewModels:ChatViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MaxWidth="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto" MaxWidth="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Left sidebar-->
        <Border Background="#FF2F3136" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <StackPanel>
                <ListBox ItemsSource="{Binding Channels}" SelectedItem="{Binding SelectedChannel}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBox Text="{Binding NewChannelName}"/>
                <Button Command="{Binding AddChannelCommand}" Content="Dodaj kanał"/>
            </StackPanel>
        </Border>

        <!-- Center -->
        <Border Background="#FF36393F" Grid.Column="1" Grid.Row="0">
            <ItemsControl ItemsSource="{Binding Channel.Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8" Orientation="Horizontal">
                            <TextBlock Text="{Binding User.Username}" Foreground="White" Margin="0,0,8,0" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Text}" Foreground="White" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" Background="#FF36393F" Padding="5">
            <DockPanel>
                <Button DockPanel.Dock="Right" Padding="18, 6" Background="#FF4D5563" BorderBrush="{x:Null}" Foreground="Gainsboro" Command="{Binding SendMessageCommand}">SEND</Button>
                <TextBox Background="#FF40444B" Foreground="Gainsboro" BorderBrush="{x:Null}" Padding="16,8" Text="{Binding Message}"/>
            </DockPanel>
        </Border>

        <!-- Right sidebar -->
        <Border Background="#FF2F3136" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
        </Border>
    </Grid>

</Page>
